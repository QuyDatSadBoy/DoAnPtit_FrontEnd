# ===========================================
# DEVELOPMENT Environment (npm start)
# ===========================================
# Dùng khi: npm start → http://localhost:3000
# Gọi API qua domain production (giống production)
# ===========================================

# API URL: Gọi BE qua domain production
REACT_APP_INTERNAL_API_URL=https://tranquydat.com/api/v1/medical

# Socket URL: Socket.IO qua domain production
REACT_APP_INTERNAL_SOCKET_URL=https://tranquydat.com

# PUBLIC URL: URL để hiển thị ảnh, static files
REACT_APP_PUBLIC_BACKEND_URL=https://tranquydat.com/api/v1/medical

# ===========================================
# App Configuration
# ===========================================
REACT_APP_NAME=Medical Imaging System (DEV)
REACT_APP_VERSION=1.0.0-dev
REACT_APP_DEBUG=true

# ===========================================
# Feature Flags
# ===========================================
REACT_APP_ENABLE_SOCKET=true
REACT_APP_ENABLE_REALTIME=true
REACT_APP_ENABLE_FACE_RECOGNITION=true
REACT_APP_SOCKET_RECONNECTION=true
REACT_APP_SOCKET_RECONNECTION_ATTEMPTS=5

# ===========================================
# File Upload Configuration
# ===========================================
REACT_APP_MAX_UPLOAD_SIZE_MB=50
REACT_APP_ALLOWED_FILE_TYPES=.png,.jpg,.jpeg,.npy

# ===========================================
# UI Configuration
# ===========================================
REACT_APP_DEFAULT_LANGUAGE=vi
REACT_APP_DEFAULT_PAGE_SIZE=10

# ===========================================
# Development Settings
# ===========================================
DANGEROUSLY_DISABLE_HOST_CHECK=true
GENERATE_SOURCEMAP=false
